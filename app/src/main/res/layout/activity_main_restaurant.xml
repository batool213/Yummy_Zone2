<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/Screen"
    tools:context=".activites.mainRestaurantActivity"
    >

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/restaurant_main_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/restaurant_main_nav"
        android:background="@color/orange"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/restaurant_main_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/bar"
        app:itemIconTint="@drawable/menu_bar_item_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/restaurant_menu_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>