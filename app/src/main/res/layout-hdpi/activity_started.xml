<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activites.StartedActivity"
    style="@style/Screen">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="590dp"
        android:layout_height="670dp"
        android:layout_marginTop="168dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/startedimage" />

    <TextView
        android:id="@+id/textView1"
        style="@style/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="Get the fastest"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="delivery food for you"
        android:textSize="60sp"
        android:textStyle="bold"
        style="@style/text"
        app:layout_constraintTop_toBottomOf="@id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:text="order food and get delivery within a few minutes ro your door "
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginStart="@dimen/margin_hdpi"
        android:layout_marginEnd="@dimen/margin_hdpi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/started_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/buttonHeight_hdpi"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:inputType="textCapSentences"
        android:scaleType="centerCrop"
        android:text="Get started"
        android:layout_marginStart="@dimen/margin_hdpi"
        android:layout_marginEnd="@dimen/margin_hdpi"
        android:textAlignment="center"
        android:textColorLink="@color/orange"
        android:textSize="@dimen/buttonText_hdpi"
        android:background="@drawable/bt_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>